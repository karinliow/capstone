@model capstone_mongo.Models.Grade

@{
    ViewData["Title"] = "Grade Details";
}

@if (TempData["GradeSuccess"] != null)
{
    <div class="alert alert-success">
        @TempData["GradeSuccess"]
    </div>
}

<h4>Grade Details</h4>
<hr />

<div class="form-group row" style="user-select: none;">
    <span class="col-sm-2" style="font-weight:bold;">
        @Html.DisplayNameFor(model => model.Id)
    </span>
    <span class="col-sm-10">
        @Html.DisplayFor(model => model.Id)
    </span>
</div>
<div class="form-group row" style="user-select: none;">
    <span class="col-sm-2" style="font-weight: bold;">
        @Html.DisplayNameFor(model => model.StudentName)
    </span>
    <span class="col-sm-10">
        @Html.DisplayFor(model => model.StudentName)
    </span>
</div>
<div class="form-group row">
    <span class="col-sm-2" style="font-weight:bold">
        @Html.DisplayNameFor(model => model.FinalScore)
    </span>
    <span class="col-sm-10">
        @Html.DisplayFor(model => model.FinalScore)
    </span>
</div>
<br />

<hr style="margin: 0;color: black;">

<table class="table">
    <thead>
        <tr>
            <th>Assessments</th>
            <th>Scores</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assessmentScore in Model.AssessmentScores)
        {
            <tr>
                <td>@assessmentScore.Key</td>
                <td>@Html.DisplayFor(m => m.AssessmentScores[assessmentScore.Key], new { @class = "form-control" })</td>
            </tr>
        }
    </tbody>
</table>