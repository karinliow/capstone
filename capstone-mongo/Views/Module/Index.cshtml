@model IEnumerable<capstone_mongo.Models.Module>

@{
    ViewData["Title"] = "List of Modules";
}

@if (TempData["ModuleSuccess"] != null)
{
    <div class="alert alert-success">
        @TempData["ModuleSuccess"]
    </div>
}

<div id="showAlert">
</div>

<div class="row">
    <h4 style="max-width: max-content;
               margin: 0;
               align-self: center;">List of Modules</h4>

    @if (User.IsInRole("admin"))
    {
        <div style="align-self: auto;margin-inline-start: auto; max-width: max-content">
            <a class="btn btn-primary" asp-action="AddModule">Create New Module</a>
        </div>
    }

</div>
<hr style="margin-block-end: auto;">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ModuleCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModuleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignGroup)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ModuleCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModuleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignGroup)
                </td>
                <td>
                    <span>
                        @Html.ActionLink("View Module", "Details",
                   new { id = item.ModuleCode })
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>
